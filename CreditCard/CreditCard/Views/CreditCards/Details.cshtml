@model CreditCardDetailsViewModel

@{
    ViewData["Title"] = "Card Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">ðŸ’³ Credit Card Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Card Holder</dt>
                        <dd class="col-sm-7">@Model.CardHolderName</dd>

                        <dt class="col-sm-5">Card Number</dt>
                        <dd class="col-sm-7">**** **** **** @Model.Last4Digits</dd>

                        <dt class="col-sm-5">CVV</dt>
                        <dd class="col-sm-7">***</dd>

                        <dt class="col-sm-5">Expiration</dt>
                        <dd class="col-sm-7">@Model.ExpirationMonth / @Model.ExpirationYear</dd>
                    </dl>

                    <div class="mt-4 text-center">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>