@model CreditCardDeleteViewModel

@{
    ViewData["Title"] = "Delete Credit Card";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">üóëÔ∏è Delete Credit Card</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this card?</h5>
                    <p>This action cannot be undone.</p>

                    <dl class="row mt-4">
                        <dt class="col-sm-5">Card Holder</dt>
                        <dd class="col-sm-7">@Model.CardHolderName</dd>

                        <dt class="col-sm-5">Card Number</dt>
                        <dd class="col-sm-7">**** **** **** @Model.Last4Digits</dd>

                        <dt class="col-sm-5">Expiration</dt>
                        <dd class="col-sm-7">@Model.ExpirationMonth / @Model.ExpirationYear</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="text-center">
                            <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>